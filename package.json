{
  "name": "dbchat-website",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run serve\" \"bun run build -- --watch\"",
    "build": "bunx @tailwindcss/cli -i ./style.css -o ./dist/style.css",
    "serve": "browser-sync start --server --files './index.html, ./dist/style.css' --port 3000"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.6",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "tailwindcss": "^4.1.6"
  }
}
