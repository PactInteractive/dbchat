{
  "name": "dbchat-website",
  "private": true,
  "scripts": {
    "dev": "concurrently \"bun run serve\" \"bun run build -- --watch\" \"browser-sync start --server --files './style.css, ./index.html' --port 3000\"",
    "build": "bunx @tailwindcss/cli -i ./src/style.css -o ./style.css",
    "serve": "serve ./ -p 3000"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.6",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.1.2",
    "serve": "^14.2.4",
    "tailwindcss": "^4.1.6"
  }
}